<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:demo="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".DemoActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.doctoror.aspectratiolayout.AspectRatioLayout
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            demo:aspectType="vertical"
            demo:aspect="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b2b2b2"
                android:text="width=128dp\naspectType=vertical\naspect=1\nHeight always matches width"
                android:gravity="center"/>

        </com.doctoror.aspectratiolayout.AspectRatioLayout>


        <com.doctoror.aspectratiolayout.AspectRatioLayout
            android:layout_width="240dp"
            android:layout_height="56dp"
            android:layout_margin="24dp"
            android:layout_gravity="right"
            android:background="#598292"
            demo:aspectType="vertical"
            demo:aspect="0.5">

            <TextView
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:background="#b2ffb2"
                android:gravity="center"
                android:text="width=240dp\naspectType=vertical\naspect=0.5\nHeight is always 0.5 of width"/>

        </com.doctoror.aspectratiolayout.AspectRatioLayout>

        <com.doctoror.aspectratiolayout.AspectRatioLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_gravity="right"
            android:background="#598292"
            demo:aspectType="vertical"
            demo:aspect="0.4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b2b2b2"
                android:gravity="center"
                android:text="width=match_parent\nmargin=24dp\naspectType=vertical\naspect=0.4\n height is always 0.4 of width"/>

        </com.doctoror.aspectratiolayout.AspectRatioLayout>

        <com.doctoror.aspectratiolayout.AspectRatioLayout
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            demo:aspectType="horizontal"
            demo:aspect="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b2b2ff"
                android:text="height=82dp\naspectType=horizontal\naspect=2\nWidth is always two times as large as height"
                android:gravity="center"/>

        </com.doctoror.aspectratiolayout.AspectRatioLayout>

        <com.doctoror.aspectratiolayout.AspectRatioLayout
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="right"
            demo:aspectType="vertical"
            demo:aspect="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff9f"
                android:text="width=128dp\naspectType=vertical\naspect=2\nHeight is always two times as large as width"
                android:gravity="center"/>

        </com.doctoror.aspectratiolayout.AspectRatioLayout>

    </LinearLayout>

</ScrollView>